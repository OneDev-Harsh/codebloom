{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "moduleResolution":"nodenext",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types", "./generated"]
    },
    "include": [
        "./**/*.ts",
        "generated",
        "src",
        "types"
    ],
    "exclude": [
        "node_modules"
    ]
}